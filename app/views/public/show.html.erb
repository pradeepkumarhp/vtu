<h2><%= @page.name %></h2>

<% @page.sections.visible.sorted.each do |section| %>
  <div class="section">
    <% case section.content_type
       when 'HTML' %>
         <%= raw(sanitize(section.content, :tags => ['h5','h3', 'h4','br','li','ul', 'strong', 'em', 'a'])) %>
    <% when 'text' %>
        <p><%= section.content %></p>
    <% end %>
  </div>
<% end %>
